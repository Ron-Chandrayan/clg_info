  <style>
    :root {
            --dark-bg: #111827;
            --card-bg: #1F2937;
            --header-bg: #1e1b4b;
            --border-color: #374151;
            --text-secondary: #9CA3AF;
        }
        body {
            background-color: var(--dark-bg);
            color: #fff;
        }
        .navbar {
            background-color: var(--header-bg) !important;
        }
        .card {
