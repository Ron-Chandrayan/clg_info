<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student SGPI List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .card {
      margin: 15px 0;
    }
    .navbar-brand {
      font-weight: bold;
    }
    a{
        text-decoration: none;
        color: black;   
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Student SGPI Portal</a>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="text-center mb-4">List of Students</h2>
    <div class="row" id="student-list">
      <% datas.forEach(student => { %>
        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="\"><%= student.name %></a></h5>
              <p class="card-text">Roll No: <%= student.rollNo %></p>
              <p class="card-text"><strong>SGPI:</strong> <%= student.sgpi %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
